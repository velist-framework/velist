NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0
JWT_SECRET=change-this-to-a-32-character-secret-key-in-production

# Encryption key for 2FA secrets (AES-256-GCM)
# Must be at least 32 characters. Use a different key from JWT_SECRET!
# Generate: openssl rand -base64 32
ENCRYPTION_KEY=change-this-to-a-different-32-char-secret-key

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Storage Driver: 'local' or 's3'
STORAGE_DRIVER=local

# Local Storage
LOCAL_STORAGE_PATH=./storage
LOCAL_STORAGE_URL=/storage

# S3 Storage (optional - only if STORAGE_DRIVER=s3)
# S3_BUCKET=
# S3_REGION=
# S3_ENDPOINT=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# CDN_URL=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_MINUTES=10
BACKUP_RETENTION_COUNT=10
BACKUP_LOCAL_PATH=./storage/backups
BACKUP_S3_ENABLED=false
BACKUP_S3_PATH=backups/database
